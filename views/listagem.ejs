<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listagem de Atividades</title>
    <link rel="stylesheet" href="/css/listagem.css">
</head>

<body>
    <div class="container">
        <h1><strong>Painel</strong></h1>
        <div class="card">
            <div class="card-header">
                <h3>Tarefas</h3>
            </div>
            <div class="card-body">
                <table>
                    <thead>
                        <tr>
                            <th>Tarefa</th>
                            <th>Status</th>
                            <th>Prazo</th>
                            <th>Descrição</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody id="activityTableBody">
                        <% atividades.forEach(atividade => { %>
                            <tr>
                                <td><%= atividade.titulo %></td>
                                <td><%= atividade.status %></td>
                                <td><%= atividade.prazo %></td>
                                <td><%= atividade.descricao %></td>
                                <td>
                                    <form action="/delete/<%= atividade.id %>" method="POST" style="display:inline;">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <button type="submit" class="btn">Deletar</button>
                                    </form>
                                    <a href="/editarAtividade/<%= atividade.id %>" class="btn">Editar</a>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
            <div class="card-footer">
                <a href="/criarAtividade" class="btn">Adicionar Nova Atividade</a>
            </div>
        </div>
    </div>
</body>

</html>
