<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Relatório</title>
    <style>
        /* Estilos CSS aqui */
        body {
            background-color: #f5f5f5;
            color: #333;
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        h1 {
            text-align: center;
            margin-bottom: 40px;
        }

        .card {
            background-color: #fff;
            border-radius: 20px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-bottom: 20px;
        }

        .card-header {
            background-color: #f5f5f5;
            color: #333;
            border-radius: 20px;
            padding: 10px 20px;
            font-size: 18px;
        }

        .card-body {
            padding: 20px;
        }

        .card-text {
            font-size: 16px;
        }

        .btn {
            background-color: #4CAF50;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }

        .btn:hover {
            background-color: #45a049;
            color: #fff;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            border-radius: 10px;
            overflow: hidden;
        }

        th,
        td {
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #f5f5f5;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1><strong>Gerenciador de Atividades - Relatório</strong></h1>
        <div class="card">
            <div class="card-header">
                <h3>Relatório</h3>
            </div>
            <div class="card-body">
                <table>
                    <thead>
                        <tr>
                            <th>Nome do Projeto</th>
                            <th>Descrição</th>
                            <th>Prazo</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody id="reportTableBody">
                        <!-- Os projetos serão adicionados aqui dinamicamente -->
                    </tbody>
                </table>
                <a href="/relatorios/gerar" class="btn">Gerar Relatório</a>
            </div>
        </div>
    </div>

    <script>
        // Função para adicionar um novo projeto ao relatório
        function addProjectToReport(project) {
            const tableBody = document.getElementById('reportTableBody');
            const row = tableBody.insertRow();

            const projectNameCell = row.insertCell(0);
            const projectDescCell = row.insertCell(1);
            const projectDeadlineCell = row.insertCell(2);
            const projectStatusCell = row.insertCell(3);

            projectNameCell.textContent = project.nome;
            projectDescCell.textContent = project.descricao;
            projectDeadlineCell.textContent = project.prazo;
            projectStatusCell.textContent = project.status;
        }

        // Função para buscar e exibir projetos do banco de dados para o relatório
        function fetchProjectsForReport() {
            // Implemente a lógica para buscar projetos do banco de dados aqui
            // Por exemplo, usando uma requisição AJAX para uma rota de API que retorna os projetos
            // Após buscar os projetos, adicione-os ao relatório usando a função addProjectToReport()
        }

        // Inicializar a página e buscar projetos para o relatório
        fetchProjectsForReport();
    </script>
</body>

</html>